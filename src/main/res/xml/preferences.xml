<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

    <CheckBoxPreference
            android:key="pref_startup_option"
            android:title="@string/pref_startup_option_title"
            android:defaultValue="false" />
    <ListPreference
            android:key="pref_list_style"
            android:title="@string/pref_list_style_option_title"
            android:dialogTitle="@string/pref_list_style_option_title"
            android:entries="@array/list_style_array"
            android:entryValues="@array/list_style_array"
            android:defaultValue="No List Style" />
</PreferenceScreen>
